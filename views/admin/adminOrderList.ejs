<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">

    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Include DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

    <!-- Include DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

</head>

<body>
    <div class="flex">
        <%- include('../partials/adminSideMenu')%>
            <div class="flex-1">

                <header
                    class="fixed top-0 left-[250px] right-0 h-[80px] border-b w-full flex items-center pl-6 bg-white">
                    <ul class="flex items-center gap-x-2">
                        <li class="text-gray-500 text-base cursor-pointer">
                            <a href="/admin/dashboard">Dashboard</a>
                        </li>
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" class="fill-gray-400 w-3 -rotate-90"
                                viewBox="0 0 24 24">
                                <path fill-rule="evenodd"
                                    d="M11.99997 18.1669a2.38 2.38 0 0 1-1.68266-.69733l-9.52-9.52a2.38 2.38 0 1 1 3.36532-3.36532l7.83734 7.83734 7.83734-7.83734a2.38 2.38 0 1 1 3.36532 3.36532l-9.52 9.52a2.38 2.38 0 0 1-1.68266.69734z"
                                    clip-rule="evenodd" data-original="#000000"></path>
                            </svg>
                        </li>
                        <li class="text-black text-xl font-bold cursor-pointer">
                            <a href="#">Orders List</a>
                        </li>
                    </ul>
                </header>

                <main class="pl-[270px] pr-[20px] pt-[120px]">
                    <table id="example" class="bg-white">
                        <thead class="bg-[#18ec95]">
                            <tr class="">
                                <th>OrderID</th>
                                <th>User Email</th>
                                <th>OrderDate</th>
                                <th>Total Amount</th>
                                <th>Order Status</th>
                                <th>Return Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <%if(orders && orders.length>0){%>
                                <%orders.forEach(order=> {%>
                                    <%let totalPay=0;%>
                                        <% order.orderedProducts.forEach( pay=> totalPay+=pay.totalPay)%>
                                            <%#totalPay+=order.orderedProducts.totalPay%>

                                                <tr class="odd:bg-[#c5d4d1] even:bg-[#b7ccc1]">
                                                    <td>
                                                        <%= order._id%>
                                                    </td>
                                                    <td>
                                                        <%= order.user.email%>
                                                    </td>
                                                    <td>
                                                        <%= order.createdAt.toLocaleString()%>
                                                    </td>
                                                    <td>
                                                        â‚¹ <%= totalPay%>
                                                    </td>
                                                    <td>
                                                        <%= order.allOrdersStatus%>
                                                    </td>
                                                    <td>
                                                        <%= returnedProducts && returnedProducts.length>0? 'requested' : ''%>
                                                    </td>
                                                    <td><a href="/admin/order/view?orderId=<%= order._id%>"
                                                            class="hover:underline text-blue-600">view</a></td>
                                                </tr>
                                                <%})%>
                                                    <%}%>
                        </tbody>
                    </table>
                </main>
            </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                pageLength: 5 // Number of rows per page
            });
        });

    </script>

</body>

</html>