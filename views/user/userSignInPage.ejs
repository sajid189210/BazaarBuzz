<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign In</title>
  <link rel="shortcut icon" href="/uploads/favicon-32x32.png" type="image/x-icon">
  <link rel="stylesheet" href="/css/style.css" />

</head>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

  header {
    font-family: "Poppins", system-ui;
    font-weight: 600;
  }

  /* Hide the spinner for WebKit browsers (Chrome, Safari) */
  input[type=number]::-webkit-inner-spin-button,
  input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  /* Hide the spinner for Firefox */
  input[type=number] {
    appearance: textfield;
  }

  .invalid {
    border-color: red;
  }

  .error-message {
    color: red;
    margin-top: 5px;
  }
</style>

<%# const errorMsg={ email: '' , password: '' }; if (validErrors && validErrors.length> 0)
  {
  validErrors.forEach(error => {
  switch (error.path) {
  case 'email':
  errorMsg.email = `${error.msg} *`;
  break;
  case 'password':
  errorMsg.password = `${error.msg} *`;
  break;
  default:
  break;
  }
  });
  }
  %>

  <body>
    <div class="flex justify-center md:justify-normal">
      <header class="lg:h-18 mr-40 hidden h-screen w-1/3 bg-cover bg-center md:block"
        style="background-image: url(/images/Signup_image.jpg)">
        <!-- <h1 class="font-medium text-lg md:text-2xl lg:text-4xl mt-[38px] ml-[12px] w-full text-[#556B2F]">BazaarBuzz -->
        <!-- </h1> -->
      </header>
      <div class="flex min-h-screen items-center justify-center p-6">
        <div class="container mx-auto md:max-w-screen-lg">
          <div class="mb-6 rounded bg-white p-4 px-4 shadow-lg md:p-8">
            <div class="text-sm">
              <div class="flex text-gray-600">

                <div class="w-full lg:col-span-2">
                  <form action="/user/signIn" method="POST">
                    <div class="mr-16">
                      <h2 class="mb-4 text-3xl font-semibold text-[#556B2F]">Sign In</h2>
                      <p class="text-[#A9A9A9]">Please fill out all the fields.</p>
                      <div class="py-2">

                        <%if(authErrors) {%>
                          <span class="block text-red-600 w-72">
                            <%= authErrors%>
                          </span>
                          <%}%>

                      </div>
                    </div>
                    <div class="grid grid-cols-1 gap-4 gap-y-2 text-sm md:grid-cols-5">
                      <!-- <div class="md:col-span-5">
                        <label for="username" class="text-[#708090]">Username</label>
                        <input type="text" name="username" id="username" class="mt-1 h-10 w-full rounded border bg-gray-50 px-4 text-[#646060]" value="" />
                      </div> -->

                      <div class="md:col-span-5">
                        <label for="email" class="text-[#708090]">Email Address</label>
                        <%#if(validErrors) {%>
                          <span class="text-red-600">
                            <%#= errorMsg.email %>
                          </span>
                          <%#}%>
                            <input type="email" name="email" id="email"
                              class="mt-1 h-10 w-full rounded border bg-gray-50 px-4 text-[#646060]" required />
                      </div>

                      <div class="md:col-span-5">
                        <label for="password" class="text-[#708090]">Password</label>
                        <%#if(validErrors) {%>
                          <span class="text-red-600">
                            <%#= errorMsg.password %>
                          </span>
                          <%#}%>
                            <input type="password" name="password" id="password"
                              class="mt-1 h-10 w-full rounded border bg-gray-50 px-4 text-[#646060]" required />
                      </div>

                      <div class="md:col-span-5">
                        <button type="button" onclick="showModal()"
                          class="text-blue-600 hover:text-blue-900 float-right cursor-pointer">forgot password?</button>
                      </div>

                      <div class="mt-4 text-right md:col-span-5">
                        <div class="w-full mb-2">
                          <button
                            class="w-full rounded bg-[#7a9d3e] px-4 py-2 font-bold text-white hover:bg-[#556B2F] ">SignIn</button>
                        </div>
                        <div>
                          <span class=" flex justify-center mb-2">or</span>
                        </div>
                        <div class="flex justify-center items-center mb-4">
                          <a href="/auth/google" class="flex bg-white">
                            <div class="m-auto">
                              <div class="flex items-center justify-start ">
                                <span class="text-[#A9A9A9] mr-1">Continue
                                  with</span>

                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                  xmlns="http://www.w3.org/2000/svg">
                                  <g clip-path="url(#clip0_307_552)">
                                    <path
                                      d="M23.766 12.2765C23.766 11.4608 23.6999 10.6406 23.5588 9.83813H12.24V14.4591H18.7217C18.4528 15.9495 17.5885 17.2679 16.323 18.1056V21.104H20.19C22.4608 19.014 23.766 15.9274 23.766 12.2765Z"
                                      fill="#4285F4" />
                                    <path
                                      d="M12.2401 24.0008C15.4766 24.0008 18.2059 22.9382 20.1945 21.1039L16.3276 18.1055C15.2517 18.8375 13.8627 19.252 12.2445 19.252C9.11388 19.252 6.45946 17.1399 5.50705 14.3003H1.5166V17.3912C3.55371 21.4434 7.7029 24.0008 12.2401 24.0008Z"
                                      fill="#34A853" />
                                    <path
                                      d="M5.50253 14.3002C4.99987 12.8099 4.99987 11.196 5.50253 9.70569V6.61475H1.51649C-0.18551 10.0055 -0.18551 14.0004 1.51649 17.3912L5.50253 14.3002Z"
                                      fill="#FBBC04" />
                                    <path
                                      d="M12.2401 4.74966C13.9509 4.7232 15.6044 5.36697 16.8434 6.54867L20.2695 3.12262C18.1001 1.0855 15.2208 -0.034466 12.2401 0.000808666C7.7029 0.000808666 3.55371 2.55822 1.5166 6.61481L5.50264 9.70575C6.45064 6.86173 9.10947 4.74966 12.2401 4.74966Z"
                                      fill="#EA4335" />
                                  </g>
                                  <defs>
                                    <clipPath id="clip0_307_552">
                                      <rect width="24" height="24" fill="white" />
                                    </clipPath>
                                  </defs>
                                </svg>
                                <span class="text-[#A9A9A9]">oogle</span>
                              </div>
                            </div>
                          </a>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <footer class="flex justify-center">
            <span class="text-[#665151]">Don&apos;t have an account? <a href="/user/signUp" class="text-sky-800">Create
                an
                account</a></span>
          </footer>
        </div>
      </div>
    </div>

    <!-- Forgot Password -->

    <div class="hidden absolute inset-0 h-screen items-center justify-center" id="forgotModal">
      <div class="absolute inset-0 backdrop-blur-sm">
        <div class="m-auto flex flex-col justify-center h-full w-full lg:w-96 items-center bg-white px-[30px]">
          <div class="relative text-3xl font-semibold mb-8 w-full">
            <p class="text-[#556B2F]">Forgot Password</p>
            <button type="button" onclick="closeModal()"
              class="popup-close absolute top-0 right-0 ml-auto inline-flex items-center rounded-lg bg-transparent p-1.5 text-sm text-gray-400 hover:bg-gray-200 hover:text-gray-900">
              <svg aria-hidden="true" class="h-5 w-5" fill="#000" viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                  cliprule="evenodd"></path>
              </svg>
            </button>
          </div>
          <form class="space-y-6 w-full" id="forgotForm">
            <div>
              <label class="mb-2 block text-sm text-[#708090]">Your Email</label>
              <div id="emailError" class="error-message hidden text-xs">
                <!-- Error Message Display -->
              </div>
              <div class="flex items-center">
                <input type="email" placeholder="Your Answer" id="forgotEmail"
                  class="w-full rounded border border-gray-400 bg-white px-4 py-3 text-sm text-[#646060] outline-none transition-colors duration-300 ease-in-out focus:border-blue-600 focus:ring-0"
                  required />
              </div>
            </div>

            <div>
              <label class="mb-2 block text-sm text-[#708090]">New Password</label>
              <div id="newPasswordError" class="error-message hidden text-xs">
                <!-- Error Message Display -->
              </div>
              <div class="flex items-center">
                <input type="password" placeholder="Your Answer" id="newPassword"
                  class="w-full rounded border border-gray-400 bg-white px-4 py-3 text-sm text-[#646060] outline-none transition-colors duration-300 ease-in-out focus:border-blue-600 focus:ring-0"
                  required />
              </div>
            </div>

            <div>
              <label class="mb-2 block text-sm text-[#708090]">Confirm Password</label>
              <div id="confirmPasswordError" class="error-message hidden text-xs">
                <!-- Error Message Display -->
              </div>
              <div class="flex items-center">
                <input type="password" placeholder="Your Answer" id="confirmPassword"
                  class="w-full rounded border border-gray-400 bg-white px-4 py-3 text-sm text-[#646060] outline-none transition-colors duration-300 ease-in-out focus:border-blue-600 focus:ring-0"
                  required />
              </div>
            </div>


            <div class="flex items-center">
              <button type="submit"
                class="w-full py-2.5 rounded-lg text-white text-sm tracking-wider font-medium border border-current outline-none bg-[#7a9d3e] hover:bg-[#556B2F] active:bg-red-700">Update
                Password</button>
            </div>

          </form>
        </div>
      </div>
    </div>



    <script src="/javascript/user/userSignInPage.js"></script>
  </body>

</html>