    <!-- OTP Verification Modal -->

    <div id="otpModal"
        class="hidden fixed left-0 right-0 top-0 z-50 flex h-full items-center justify-center overflow-y-auto overflow-x-hidden bg-black/50">
        <div class="relative mx-auto w-full max-w-lg rounded-2xl bg-white px-6 pb-9 pt-10 shadow-xl">
            <div class="mx-auto flex w-full max-w-md flex-col space-y-16">
                <div class="flex flex-col items-center justify-center space-y-2 text-center">
                    <div class="text-3xl font-semibold">
                        <p class="text-[#556B2F]">Email Verification</p>
                        <button type="button" onclick="closeModal()"
                            class="popup-close absolute right-2.5 top-3 ml-auto inline-flex items-center rounded-lg bg-transparent p-1.5 text-sm text-gray-400 hover:bg-gray-200 hover:text-gray-900">
                            <svg aria-hidden="true" class="h-5 w-5" fill="#c6c7c7" viewBox="0 0 20 20"
                                xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                    cliprule="evenodd"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="flex flex-row text-sm font-medium text-gray-400">
                        <p>We have sent a code to your email</p>
                    </div>
                </div>
                <div class="relative">
                    <form id="OTPForm">
                        <div class="flex flex-col space-y-16">
                            <div class="mx-auto flex w-full max-w-xs flex-row items-center justify-between">
                                <div class="h-16 w-16">
                                    <input
                                        class="flex h-full w-full flex-col items-center justify-center rounded-xl border bg-white px-5 text-center text-lg outline-none ring-[#7a9d3e] focus:border-[#7a9d3e] focus:ring-1"
                                        type="text" name="otp" maxlength="1" pattern="[0-9]*"
                                        oninput="this.value = this.value.replace(/[^0-9]/g, '');" />
                                </div>
                                <div class="h-16 w-16">
                                    <input
                                        class="flex h-full w-full flex-col items-center justify-center rounded-xl border bg-white px-5 text-center text-lg outline-none ring-[#7a9d3e] focus:border-[#7a9d3e] focus:ring-1"
                                        type="text" name="otp" maxlength="1" pattern="[0-9]*"
                                        oninput="this.value = this.value.replace(/[^0-9]/g, '');" />
                                </div>
                                <div class="h-16 w-16">
                                    <input
                                        class="flex h-full w-full flex-col items-center justify-center rounded-xl border bg-white px-5 text-center text-lg outline-none  ring-[#7a9d3e] focus:border-[#7a9d3e]  focus:ring-1"
                                        type="text" name="otp" maxlength="1" pattern="[0-9]*"
                                        oninput="this.value = this.value.replace(/[^0-9]/g, '');" />
                                </div>
                                <div class="h-16 w-16">
                                    <input
                                        class="flex h-full w-full flex-col items-center justify-center rounded-xl border bg-white px-5 text-center text-lg outline-none  ring-[#7a9d3e] focus:border-[#7a9d3e]  focus:ring-1"
                                        type="text" name="otp" maxlength="1" pattern="[0-9]*"
                                        oninput="this.value = this.value.replace(/[^0-9]/g, '');" />
                                </div>
                                <input type="hidden" id="modalOtpId">
                            </div>

                            <div class="flex flex-col space-y-5">
                                <div>
                                    <button type="submit" id="otpVerifyBtn"
                                        class="flex w-full flex-row items-center justify-center rounded-xl border border-none bg-[#7a9d3e] py-5 text-center text-sm text-white shadow-sm outline-none hover:bg-[#556B2F]">Verify
                                        OTP</button>
                                </div>

                                <div
                                    class="flex flex-row items-center justify-center gap-x-3 space-x-1 text-center text-sm font-medium text-gray-500">
                                    <button type="button"
                                        class=" hidden flex flex-row items-center text-[#556B2F] hover:text-[#334612] cursor-pointer"
                                        id="resendOTP">Resend OTP</button>
                                    <p id="timer">1:00</p>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
